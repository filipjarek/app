{% extends 'base.html.twig' %}

{% block title %}
	Create grade
{% endblock %}

{% block body %}
{% include "components/_header.html.twig" %}

<nav class="flex" aria-label="Breadcrumb">
  <ol class="inline-flex items-center px-20 ">
    <li class="inline-flex items-center">
      <a href="/subject" class="inline-flex items-center text-sm font-medium text-gray-400 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
        <i class="fa-solid fa-house w-4 h-4 mr-2"></i>
		Subjects
      </a>
    </li>
    <li>
      <div class="flex items-center">
	  <i class="fa-solid fa-caret-right w-4 h-4 px-2 text-gray-400"></i>
        <a href="/subject/{{ subject.id }}/class/{{ student.classroom.id }}" class="ml-1 text-sm font-medium text-gray-400 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
			Student list
		</a>
      </div>
    </li>
	<li>
      <div class="flex items-center">
	  <i class="fa-solid fa-caret-right w-4 h-4 px-2 text-gray-400"></i>
        <a href="/subject/{{ subject.id }}/class/{{ student.classroom.id }}/student/{{ student.id }}" class="ml-1 text-sm font-medium text-gray-400 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
			Grades
		</a>
      </div>
    </li>
     <li class="inline-flex items-center">	
		<div class="flex items-center">
		<i class="fa-solid fa-caret-right w-4 h-4 px-2 text-gray-400"></i>
      		<p class="inline-flex items-center text-sm font-medium text-gray-700 dark:text-gray-400">
				<span class="ml-1 text-sm font-medium text-gray-900 md:ml-2 dark:text-gray-100">
					Add grade
				</span>
      		</p>
		</div>
    </li>
  </ol>
</nav>

	<div class="py-3">
		<div class="max-w-7xl mx-auto sm:px-6 lg:px-6">
			<div class="bg-slate-400 overflow-hidden shadow-xl">
				<div class="p-6 sm:px-20 bg-gray-100 dark:bg-gray-800 border border-gray-300  dark:border-gray-700">
					<div class="text-base text-gray-600 dark:text-gray-300">
						<span>
							<strong>Add new grade</strong>
						</span>
					</div>
					<div class="max-w-7xl w-4/5 mx-auto py-6 sm:px-6 lg:px-34">

						{{ form_start(form) }}

						<label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white py-1 px-1">
							{{ form_label(form.student) }}:
							
						</label>

						{{ form_widget(form.student, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:dark:focus:border-blue-500 focus:outline-none focus:ring focus:ring-gray-500 dark:focus:ring-gray-500'} }) }}

						<div class="text-xs text-red-600 dark:text-red-500">
							{{ form_errors(form.student) }}
						</div>

						<label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white py-1 px-1">
							{{ form_label(form.subject) }}:
							
						</label>

						{{ form_widget(form.subject, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:dark:focus:border-blue-500 focus:outline-none focus:ring focus:ring-gray-500 dark:focus:ring-gray-500'} }) }}

						<div class="text-xs text-red-600 dark:text-red-500">
							{{ form_errors(form.subject) }}
						</div>

						<label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white py-1 px-1">
							{{ form_label(form.grade) }}
						</label>

						{{ form_widget(form.grade, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:dark:focus:border-blue-500 focus:outline-none focus:ring focus:ring-gray-500 dark:focus:ring-gray-500'} }) }}

						<div class="text-xs text-red-600 dark:text-red-500">
							{{ form_errors(form.grade) }}
						</div>

						<label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white py-1 px-1">
							{{ form_label(form.description) }}
						</label>

						{{ form_widget(form.description, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:dark:focus:border-blue-500 focus:outline-none focus:ring focus:ring-gray-500 dark:focus:ring-gray-500'} }) }}

						<div class="text-xs text-red-600 dark:text-red-500">
							{{ form_errors(form.description) }}
						</div>

						<div class="flex items-center justify-end px-4 py-3 text-right sm:px-6"> 

						<div class="shadow overflow-hidden inline-flex items-center px-4 py-3 bg-gray-50 dark:bg-gray-700 font-medium border border-gray-300 dark:border-gray-600 rounded-md text-sm dark:text-white tracking-widest hover:bg-indigo-500 dark:hover:bg-indigo-500 hover:text-white dark:hover:text-white disabled:opacity-25 transition duration-700 ease-in-out">
							{{ form_row(form.submit) }}
						</div>
						
						<div class="flex items-center justify-end px-4 py-3 text-right sm:px-6">    
							<a href="/subject/{{ subject.id }}/class/student/{{ student.id }}">
                    			<button type="button" class="shadow overflow-hidden inline-flex items-center px-4 py-3 bg-gray-50 dark:bg-gray-700 font-medium border border-gray-300 dark:border-gray-600 rounded-md text-sm dark:text-white tracking-widest hover:bg-indigo-500 dark:hover:bg-indigo-500 hover:text-white dark:hover:text-white disabled:opacity-25 transition duration-700 ease-in-out">
                       				Cancel
                    			</button>
                			</a>
                		</div>
						
						{{ form_end(form) }}

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
