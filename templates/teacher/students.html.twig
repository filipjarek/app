                </th>
                <th scope="col" class="px-6 py-3">
                    Class
                </th>
            </tr>
        </thead>
        <tbody>
        {%  for student in students %}
         
            <tr class="bg-slate-100 border-b  hover:bg-gray-50">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                    {{ student.id}} 
                </th>
                <td class="px-6 py-4">
                    {{ student.fullname}}            
                </td>
                <td class="px-6 py-4">
                    <span class="text-xs inline-block py-1 px-2.5 leading-none text-center whitespace-nowrap align-baseline font-bold bg-emerald-300 text-gray-600">
                    {{ student.class}} 
                    </span>
                </td>   
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

                </div>
            </div>
        </div>
    </div>
