{% extends 'base.html.twig' %}

{% block title %}
	Teachers
{% endblock %}

{% block body %}
{% include "components/_header.html.twig" %}

<nav class="flex">
  <ol class="inline-flex items-center px-20">
    <li class="inline-flex items-center">
      <p class="inline-flex items-center text-sm font-medium text-gray-700 dark:text-gray-400">
		<span class="ml-1 text-sm font-medium text-gray-900 md:ml-2 dark:text-gray-100">
			<i class="fa-solid fa-house w-4 h-4 mr-2"></i>Teachers
		</span>
      </p>
    </li>
  </ol>
</nav>

	<div class="py-3">
		<div class="max-w-7xl mx-auto sm:px-6 lg:px-6">
			<div class="bg-slate-400 overflow-hidden shadow-xl">
				<div class="p-6 sm:px-20 bg-gray-100 dark:bg-gray-800 border border-gray-300  dark:border-gray-700">
					<div class="text-base text-gray-600 dark:text-gray-300">
						<span>
							<strong>Teacher list:
							</strong>
						</span>
					</div>
					<div class="max-w-7xl w-full mx-auto py-6 sm:px-6 lg:px-34">
						<div class="container mt-4">

							<div class="relative overflow-x-auto shadow-md">
								<table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 border border-gray-300 dark:border-gray-700">
									<thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-600 dark:text-gray-400">
										<tr>
											<th scope="col" class="px-6 py-3">
												<i class="fa-solid fa-sort"></i> {{ knp_pagination_sortable(teachertasks, 'Id', 'id') }}<i class="fa-solid fa-hashtag"></i>
											</th>
											<th scope="col" class="px-6 py-3">
												<i class="fa-solid fa-sort"></i> {{ knp_pagination_sortable(teachertasks, 'Firstname', 'user.firstname') }}<i class="fa-solid fa-signature"></i>
											</th>
											<th scope="col" class="px-6 py-3">
												<i class="fa-solid fa-sort"></i> {{ knp_pagination_sortable(teachertasks, 'Lastname', 'user.lastname') }}<i class="fa-solid fa-signature"></i>
											</th>
											<th scope="col" class="px-6 py-3">
												<i class="fa-solid fa-sort"></i> {{ knp_pagination_sortable(teachertasks, 'Subject', 'subject.name') }}<i class="fa-solid fa-book-bookmark"></i>
											</th>
										</tr>
									</thead>
									<tbody>
										{%  for teachertask in teachertasks %}
											<tr class="bg-white border-b dark:bg-slate-800 dark:border-gray-700">

												<th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
													{{ teachertask.id }}
												</th>
												<td class="px-6 py-4">
													{{ teachertask.user.firstname }}
												</td>
												<td class="px-6 py-4">
													{{ teachertask.user.lastname }}
												</td>
												<td class="px-6 py-4">
													{{ teachertask.subject }}
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
					<div class="navigation flex justify-center ">
						{{ knp_pagination_render(teachertasks) }}
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
